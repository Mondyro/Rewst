{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "functionAppName": {
      "type": "string",
      "defaultValue": "Rewst-PowerShell-Flow",
      "metadata": {
        "description": "The name of the Function App."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "Central US",
      "allowedValues": [
        "East US",
        "West US",
        "North Europe",
        "Southeast Asia",
        "Australia East",
        "Central US",
        "East US 2",
        "West Europe"
      ],
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "appInsightsChoice": {
      "type": "string",
      "defaultValue": "New",
      "allowedValues": [
        "New",
        "Existing"
      ],
      "metadata": {
        "description": "Choose whether to create a new Application Insights resource or use an existing one."
      }
    },
    "appInsightsResourceId": {
      "type": "string",
      "metadata": {
        "description": "The Resource ID of the existing Application Insights resource."
      },
      "condition": "[equals(parameters('appInsightsChoice'), 'Existing')]"
    },
    "appInsightsInstrumentationKey": {
      "type": "string",
      "metadata": {
        "description": "The Instrumentation Key of the existing Application Insights resource."
      },
      "condition": "[equals(parameters('appInsightsChoice'), 'Existing')]"
    },
    "githubRepoUrl": {
      "type": "string",
      "defaultValue": "https://github.com/Mondyro/Rewst/tree/main/Powershell",
      "metadata": {
        "description": "GitHub repository URL containing the PowerShell scripts and function code."
      }
    }
  },
  "variables": {
    "functionAppSku": {
      "tier": "Dynamic",  // This ensures the Consumption Plan (Dynamic) is used
      "name": "F1"        // The F1 SKU corresponds to the Consumption Plan
    },
    "appInsightsSku": {
      "name": "Basic"  // Application Insights SKU (can be 'Standard' if needed)
    }
  },
  "resources": [
    // Conditional resource for Application Insights (only created if 'New' is selected)
    {
      "condition": "[equals(parameters('appInsightsChoice'), 'New')]",
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02",
      "name": "[concat(parameters('functionAppName'), '-ai')]",
      "location": "[parameters('location')]",
      "properties": {
        "Application_Type": "FunctionApp",
        "Request_Source": "IbizaAI",
        "sku": {
          "name": "[variables('appInsightsSku').name]"
        }
      }
    },

    // Server farm (App Service Plan) resource for the function app
    {
      "type": "Microsoft.Web/serverFarms",
      "apiVersion": "2024-04-01",
      "name": "[parameters('functionAppName')]",
      "location": "[parameters('location')]",
      "properties": {
        "name": "[parameters('functionAppName')]",
        "sku": {
          "name": "[variables('functionAppSku').name]",
          "tier": "[variables('functionAppSku').tier]",
          "capacity": 1
        }
      }
    },

    // Function App resource
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2024-04-01",
      "name": "[parameters('functionAppName')]",
      "location": "[parameters('location')]",
      "tags": {
        "hidden-link: /app-insights-resource-id": "[if(equals(parameters('appInsightsChoice'), 'New'), resourceId('Microsoft.Insights/components', concat(parameters('functionAppName'), '-ai')), parameters('appInsightsResourceId'))]",
        "hidden-link: /app-insights-instrumentation-key": "[if(equals(parameters('appInsightsChoice'), 'New'), reference(resourceId('Microsoft.Insights/components', concat(parameters('functionAppName'), '-ai')), '2020-02-02', 'Full').InstrumentationKey, parameters('appInsightsInstrumentationKey'))]",
        "hidden-link: /app-insights-conn-string": "[if(equals(parameters('appInsightsChoice'), 'New'), concat('InstrumentationKey=', reference(resourceId('Microsoft.Insights/components', concat(parameters('functionAppName'), '-ai')), '2020-02-02', 'Full').InstrumentationKey, ';IngestionEndpoint=https://centralus-2.in.applicationinsights.azure.com/;LiveEndpoint=https://centralus.livediagnostics.monitor.azure.com/'), concat('InstrumentationKey=', parameters('appInsightsInstrumentationKey'), ';IngestionEndpoint=https://centralus-2.in.applicationinsights.azure.com/;LiveEndpoint=https://centralus.livediagnostics.monitor.azure.com/'))]"
      },
      "properties": {
        "enabled": true,
        "serverFarmId": "[resourceId('Microsoft.Web/serverFarms', parameters('functionAppName'))]",
        "siteConfig": {
          "numberOfWorkers": 1,
          "linuxFxVersion": "PowerShell|7.4",
          "alwaysOn": false,
          "http20Enabled": false
        },
        "httpsOnly": true,
        "sourceControl": {
          "repoUrl": "[parameters('githubRepoUrl')]",
          "branch": "main",
          "isManualIntegration": false
        }
      }
    },

    // Function resource for the trigger
    {
      "type": "Microsoft.Web/sites/functions",
      "apiVersion": "2024-04-01",
      "name": "[concat(parameters('functionAppName'), '/', parameters('httpTriggerFunctionName'))]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('functionAppName'))]"
      ],
      "properties": {
        "script_root_path_href": "[concat('https://', parameters('functionAppName'), '.azurewebsites.net/admin/vfs/home/site/wwwroot/', parameters('httpTriggerFunctionName'), '/')]",
        "script_href": "[concat('https://', parameters('functionAppName'), '.azurewebsites.net/admin/vfs/home/site/wwwroot/', parameters('httpTriggerFunctionName'), '/run.ps1')]",
        "config_href": "[concat('https://', parameters('functionAppName'), '.azurewebsites.net/admin/vfs/home/site/wwwroot/', parameters('httpTriggerFunctionName'), '/function.json')]",
        "test_data_href": "[concat('https://', parameters('functionAppName'), '.azurewebsites.net/admin/vfs/tmp/FunctionsData/', parameters('httpTriggerFunctionName'), '.dat')]",
        "href": "[concat('https://', parameters('functionAppName'), '.azurewebsites.net/admin/functions/', parameters('httpTriggerFunctionName'))]",
        "config": {
          "bindings": [
            {
              "authLevel": "function",
              "type": "httpTrigger",
              "direction": "in",
              "name": "Request",
              "methods": [
                "get",
                "post"
              ]
            },
            {
              "type": "http",
              "direction": "out",
              "name": "Response"
            }
          ]
        },
        "invoke_url_template": "[concat('https://', parameters('functionAppName'), '.azurewebsites.net/api/', parameters('httpTriggerFunctionName'))]",
        "language": "powershell",
        "isDisabled": false
      }
    }
  ]
}
